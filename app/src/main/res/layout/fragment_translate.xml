<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/language_from_textview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/spinner_select_lang"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/language_from_textview"
        android:layout_toEndOf="@id/language_from_textview"
        android:layout_margin="5dp" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto Translate"
        android:id="@+id/auto_translate_checkbox"
        android:layout_below="@+id/spinner_select_lang"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Translate"
        android:id="@+id/btn_translate"
        android:layout_below="@+id/spinner_select_lang"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/text_to_translate"
        android:layout_below="@+id/btn_translate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/swap"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/swap"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/translated_text"
        android:layout_below="@+id/swap"
        android:layout_centerHorizontal="true" />




</RelativeLayout>